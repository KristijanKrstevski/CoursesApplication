
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!--TODO: Put the action name where the form should be submitted-->
        <form asp-action="Create">
            <input type="hidden" name="CourseId" value="@ViewBag.CourseId" />
            <div class="form-group">
                <label  class="control-label">Student</label>
                <select name="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">ReEnroll</label>
                <input name="ReEnrolled" class="form-control" />
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
